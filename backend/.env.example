# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/mallorca_shuttle?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h

# TOTP 2FA
TOTP_ISSUER="Autocares Devesa SL"
TOTP_WINDOW=2

# Company Details (VeriFactu)
COMPANY_NAME="Autocares Devesa SL"
COMPANY_CIF="B08359606"
COMPANY_ADDRESS="Calle Fuster 36 a"
COMPANY_POSTAL="07460"
COMPANY_CITY="Pollença"
COMPANY_REGION="Illes Balears"
COMPANY_COUNTRY="España"

# VeriFactu (Spanish Fiscal Compliance)
VERIFACTU_ENABLED=true
VERIFACTU_SOFTWARE_ID="AUTOCARES_DEVESA_SHUTTLE_V1"
VERIFACTU_SOFTWARE_VERSION="1.0.0"
VERIFACTU_HMAC_SECRET=your-256-bit-hmac-secret-for-hash-chains
VERIFACTU_ENVIRONMENT=test

# AEAT (Spanish Tax Authority)
AEAT_API_URL=https://prewww2.aeat.es/wlpl/TIKE-CONT/SuministroFacturas
AEAT_ENVIRONMENT=test
AEAT_CERTIFICATE_PATH=
AEAT_CERTIFICATE_PASSWORD=

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_TEST_MODE=true

# PayPal Payment (Optional)
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
PAYPAL_MODE=sandbox

# SendGrid Email
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=bookings@mallorcacycleshuttle.com
SENDGRID_FROM_NAME="Autocares Devesa"

# Email Settings
EMAIL_PROVIDER=sendgrid
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=

# File Storage (for PDFs, invoices)
STORAGE_TYPE=local
STORAGE_PATH=./storage
# For production, use Cloudflare R2 or S3
# STORAGE_TYPE=r2
# R2_ACCOUNT_ID=
# R2_ACCESS_KEY_ID=
# R2_SECRET_ACCESS_KEY=
# R2_BUCKET_NAME=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:1313,https://mallorcacycleshuttle.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cron Jobs
ENABLE_CRON_JOBS=true
REMINDER_HOURS_BEFORE=24

# Feature Flags
INVOICE_AUTO_ISSUE=true
B2B_ENABLED=true
FACTURAE_ENABLED=true

# Tax Rates
DEFAULT_IVA_TRANSPORT=0.10
DEFAULT_IVA_OTHER=0.21
